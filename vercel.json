{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "vercel-python@0.7.1",
      "maxDuration": 30          
    }
  },

 "routes": [
    { "src": "/predict", "methods": ["POST"], "dest": "api/index.py" },
    { "src": "/(.*)",   "dest": "/templates/index.html" }
  ]
}